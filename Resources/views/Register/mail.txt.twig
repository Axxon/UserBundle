{% block subject %}
    {% autoescape %}
    {{ subject }}
    {% endautoescape %}
{% endblock %}

{% block body_text %}
    {% autoescape %}
    {{ message }}

    {{ url('register_confirmation', {'token': token}) }}

    {{ footer }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% autoescape false %}
    {{ message|raw }}

    <p>
        <a href="{{ url('register_confirmation', {'token': token}) }}">
            {{ url('register_confirmation', {'token': token}) }}
        </a>
    </p>

    {{ footer|raw }}
    {% endautoescape %}
{% endblock %}
