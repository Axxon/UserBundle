<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_user.register.email.template">BlackUserBundle:Register:mail.txt.twig</parameter>
        <parameter key="black_user.suspend.email.template">BlackUserBundle:Register:suspend.txt.twig</parameter>
        <parameter key="black_user.byebye.email.template">BlackUserBundle:Register:byebye.txt.twig</parameter>
        <parameter key="black_user.lost.email.template">BlackUserBundle:Register:lost.txt.twig</parameter>
        <parameter key="black_user.back.email.template">BlackUserBundle:Register:back.txt.twig</parameter>
    </parameters>

    <services>
        <service id="black_user.mailer.default" class="Black\Bundle\UserBundle\Mailer\Mailer" public="false">
            <argument type="service" id="mailer" />
            <argument type="service" id="twig" />
            <argument type="service" id="black_config.manager.config" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="register">%black_user.register.email.template%</argument>
                    <argument key="suspend">%black_user.suspend.email.template%</argument>
                    <argument key="byebye">%black_user.byebye.email.template%</argument>
                    <argument key="lost">%black_user.lost.email.template%</argument>
                    <argument key="back">%black_user.back.email.template%</argument>
                </argument>
            </argument>
        </service>
    </services>

</container>
