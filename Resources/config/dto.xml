<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_user.application.dto.create_user.class">Black\Component\User\Application\DTO\CreateUserDTO</parameter>
        <parameter key="black_user.application.assembler.create_user.class">Black\Component\User\Application\DTO\CreateUserAssembler</parameter>

    </parameters>

    <services>
        <service id="black_user.application.dto.create_user" class="%black_user.application.dto.create_user.class%" />

        <service id="black_user.application.assembler.create_user" class="%black_user.application.assembler.create_user.class%">
            <argument>%black_user.user.model.class%</argument>
            <argument>%black_user.application.dto.create_user.class%</argument>
        </service>
    </services>
</container>