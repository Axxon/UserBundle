<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_user.form.event.password.class">Black\Bundle\UserBundle\Form\EventListener\SetUserDataSubscriber</parameter>
    </parameters>

    <services>
        <service id="black_user.user.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form" scope="request">
            <argument>%black_user.user.form.name%</argument>
            <argument type="service" id="black_user.user.form.type" />
            <argument>null</argument>
        </service>

        <service id="black_user.form.event.password" class="%black_user.form.event.password.class%" />

        <service id="black_user.user.form.type" class="%black_user.user.form.type%" scope="request" public="true">
            <argument>%black_user.model.user.class%</argument>
            <argument type="service" id="black_user.form.event.password" />
            <argument type="service" id="black_admin.form.event.button" />
            <tag name="form.type" alias="black_user_user" />
        </service>

        <service id="black_user.user.form.handler" class="%black_user.user.form.handler%" scope="request" public="true">
            <argument type="service" id="black_user.user.form" />
            <argument type="service" id="black_user.manager.user" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
            <argument type="service" id="security.encoder_factory" />
        </service>
    </services>
</container>
