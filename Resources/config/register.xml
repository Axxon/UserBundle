<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="black_user.register.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%black_user.register.form.name%</argument>
            <argument type="service" id="black_user.register.form.type" />
            <argument>null</argument>
        </service>

        <service id="black_user.register.form.type" class="%black_user.register.form.type%">
            <argument>%black_user.model.user.class%</argument>
            <tag name="form.type" alias="black_user_register"  />
        </service>

        <service id="black_user.register.form.handler" class="%black_user.register.form.handler%" scope="request" public="true">
            <argument type="service" id="black_user.register.form" />
            <argument type="service" id="request" />
            <argument type="service" id="session" />
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="black_user.mailer.default" />
        </service>
    </services>
</container>
