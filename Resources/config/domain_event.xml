<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_user.infrastructure.domain_event.subscriber.created.class">Black\Component\User\Infrastructure\DomainEvent\UserCreatedSubscriber</parameter>
        <parameter key="black_user.infrastructure.domain_event.subscriber.registered.class">Black\Component\User\Infrastructure\DomainEvent\UserRegisteredSubscriber</parameter>
        <parameter key="black_user.infrastructure.domain_event.subscriber.removed.class">Black\Component\User\Infrastructure\DomainEvent\UserRemovedSubscriber</parameter>
    </parameters>

    <services>

        <service id="black_user.infrastructure.domain_event.subscriber.created"
                 class="%black_user.infrastructure.domain_event.subscriber.removed.class%">
            <argument type="service" id="logger" />
            <argument type="service" id="session" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="black_user.infrastructure.domain_event.subscriber.registered"
                 class="%black_user.infrastructure.domain_event.subscriber.removed.class%">
            <argument type="service" id="logger" />
            <argument type="service" id="session" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="black_user.infrastructure.domain_event.subscriber.removed"
                 class="%black_user.infrastructure.domain_event.subscriber.removed.class%">
            <argument type="service" id="logger" />
            <argument type="service" id="session" />
            <tag name="kernel.event_subscriber" />
        </service>
        
    </services>
</container>