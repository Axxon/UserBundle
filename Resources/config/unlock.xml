<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="blackroom_user.register.unlock_form.type">Blackroom\Bundle\UserBundle\Form\Type\UnlockAccountType</parameter>
    </parameters>

    <services>
        <service id="blackroom_user.register.unlock_form.type" class="%blackroom_user.register.unlock_form.type%">
            <argument>%blackroom_user.model.user.class%</argument>
            <tag name="form.type" alias="blackroom_user_unlock" />
        </service>
    </services>
</container>
